test_filter = ok when
  show_start "filter";
  sv1 = stlvec ("a".."f");
  put err_p false; 
  catch eh $ filter crash sv1;
  ok0 = get err_p;
  ok1 = filter (>"b") sv1 == ("c".."f");
  ok2 = filter (>"d") (sv1,1,svend) == ["e","f"];
  ok3 = filter (>"b") (sv1,1,#sv1-1) ==  ["c","d","e"];
  ok4 = filter (>"b") emptystlvec == []; 
  ok5 = check_refcs sv1 1;
  ok = all_ok [ok0,ok1,ok2,ok3,ok4,ok5];
  show_result "filter" ok;
end with 
  eh x = put err_p true; 
  crash x = throw exception; 
end when 
  err_p = ref false; 
end; 

test_stlvec = ok when
  show_suite_start "STLVEC";
  ok = 1;
  ok = test_create && ok;
  ok = test_members && ok;
  ok = test_basic_ops && ok;
  ok = test_stlvec_erase && ok;
  ok = test_insert && ok;
  ok = test_stlvec_equal && ok;
  ok = test_listmap && ok;
  ok = test_catmap && ok;
  ok = test_do && ok;
  ok = test_foldl && ok;
  ok = test_foldl1 && ok;
  ok = test_foldr && ok;
  ok = test_foldr1 && ok;
  ok = test_filter && ok;
  show_suite_result "STLVEC" ok;
end;

