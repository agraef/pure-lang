  lookup [] = ();
  lookup (k:ks) = lookup ks when
    if ~dcc then member ss k $$ ss!k 
    else stl::sm_member ss k $$ stl::sm_get ss k;
  end;
end when 
  ss = emptystlmap;
  tm = clock;
  insert ss words;
  tm = (clock - tm) / 1000.0;
  if v then
    printf "fill    stlmap: %8.1f msecs, %d words\n"  (tm,#ss)
  else ();
