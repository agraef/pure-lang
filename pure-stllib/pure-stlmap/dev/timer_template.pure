#! --endif

/*** stlmap using iterators ********************************************/

#! --ifdef STLMAP
using stlmap;

time_stlmap_iter v words keys = () when
  tm = clock;
  spin repeats;
  tm = (clock - tm) / 1000.0;
  printf "lookup     iter: %8.1f msecs\n" (tm);
  puts (get val);
end with
  spin 0 = ();
  spin n = lookup keys $ spin (n-1);
  lookup [] = ();
  lookup (k:ks) =  lookup ks when
    i = stl::find ss k;
    stl::get_val i 3;
  end;
end when 
  ss = emptystlmap;
  tm = clock;
  insert ss words;
  tm = (clock - tm) / 1000.0;
  if v then
    printf "fill      iter: %8.1f msecs, %d words\n"  (tm,#ss)
  else ();
end;

#! --endif

