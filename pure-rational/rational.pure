left_offset_insert_every g 0 x (y : ys)
  = (x : y : left_offset_insert_every g (g - 1) x ys)
    if integerp g;
left_offset_insert_every g c x (y : ys)
  = (y : left_offset_insert_every g (c - 1) x ys)
